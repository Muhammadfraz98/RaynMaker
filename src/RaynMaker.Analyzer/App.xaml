<Application x:Class="RaynMaker.Analyzer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:RaynMaker.Analyzer">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="Window">
                <Setter Property="Background" Value="MidnightBlue"/>
            </Style>
            <Style TargetType="{x:Type local:Shell}" BasedOn="{StaticResource {x:Type Window}}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
