<MenuItem x:Class="RaynMaker.Blade.BladeMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:pn="http://github.com/ronin4net/plainion"
             xmlns:l="clr-namespace:RaynMaker.Blade"
             mc:Ignorable="d" 
             Header="Blade ..."
             Command="{Binding InvokeCommand}">
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding InvokeRequest, Mode=OneWay}">
            <prism:PopupWindowAction IsModal="False" prism:RegionManager.RegionName="{x:Static l:RegionNames.Shell}"/>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
</MenuItem>
