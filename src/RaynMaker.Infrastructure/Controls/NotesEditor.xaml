<UserControl x:Class="RaynMaker.Infrastructure.Controls.NotesEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:l="clr-namespace:RaynMaker.Infrastructure.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <ToggleButton Command="EditingCommands.ToggleBold" Name="myBold" Content="Bold"/>
            <ToggleButton Command="EditingCommands.ToggleItalic" Name="myItalic" Content="Italic"/>
            <ToggleButton Command="EditingCommands.ToggleUnderline" Name="myUnderline" Content="Underline"/>
            <Separator />
            <ComboBox Name="myFontFamily" Width="150" SelectionChanged="OnFontFamilyChanged" />
            <ComboBox Name="myFontSize" Width="50" IsEditable="True" TextBoxBase.TextChanged="OnFontSizeChanged" />
        </ToolBar>

        <l:AutoCompleteRichTextBox x:Name="myEditor"  SelectionChanged="OnSelectionChanged" Background="White"/>
    </DockPanel>
</UserControl>
