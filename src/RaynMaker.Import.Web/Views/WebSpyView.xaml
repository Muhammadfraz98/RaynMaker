<UserControl x:Class="RaynMaker.Import.Web.Views.WebSpyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:pn="http://github.com/ronin4net/plainion"
             xmlns:l="clr-namespace:RaynMaker.Import.Web.Views"
             xmlns:winforms="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" d:DesignHeight="1000" d:DesignWidth="700">
    <!--
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding InvokeRequest, Mode=OneWay}">
            <pn:PopupViewAction WindowWidth="1200" WindowHeight="700"/>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
    -->
    <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid DockPanel.Dock="Top" >
            <Menu>
                <Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <DockPanel HorizontalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>
                <MenuItem Header="_Tools">
                    <MenuItem Header="_Validation ..." Command="{Binding StartValidationCommand}" />
                </MenuItem>
            </Menu>
        </Grid>

        <DockPanel LastChildFill="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3">
            <Grid DockPanel.Dock="Top" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="URL" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Text="{Binding Url}" Margin="5,0,0,0"/>
                <Button Grid.Column="2" Content="Go" Command="{Binding GoCommand}" Margin="5,0,0,0"/>
            </Grid>

            <Grid DockPanel.Dock="Bottom">
                <TabControl>
                    <TabItem Header="Data description">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Selected path"/>
                            <TextBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" x:Name="myPath"/>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="=>" HorizontalAlignment="Center"/>
                            <TextBox Grid.Row="0" Grid.Column="5" x:Name="myValue"/>

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Dimension"/>
                            <ComboBox Grid.Row="1" Grid.Column="1" Width="100" x:Name="myDimension" SelectionChanged="myDimension_SelectedIndexChanged"/>

                            <TextBlock Grid.Row="1" Grid.Column="2" Text="Series name contains"/>
                            <TextBox Grid.Row="1" Grid.Column="3" x:Name="mySeriesName" TextChanged="mySeriesName_TextChanged"/>

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Row header column"/>
                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="myRowHeader" TextChanged="myRowHeader_TextChanged"/>

                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Skip rows"/>
                            <TextBox Grid.Row="2" Grid.Column="3" Width="50" HorizontalAlignment="Left" x:Name="mySkipRows" TextChanged="mySkipRows_TextChanged"/>

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Column header row"/>
                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="myColumnHeader" TextChanged="myColumnHeader_TextChanged"/>

                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Skip columns"/>
                            <TextBox Grid.Row="3" Grid.Column="3" Width="50" HorizontalAlignment="Left" x:Name="mySkipColumns" TextChanged="mySkipColumns_TextChanged"/>

                            <Button Grid.Row="3" Grid.Column="4" Content="Reset" Margin="3" x:Name="myReset" Click="myReset_Click"/>
                            <Button Grid.Row="3" Grid.Column="5" Content="Search path" Margin="3" x:Name="mySearchPath" Click="mySearchPath_Click"/>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Navigation">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBox Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" TextWrapping="NoWrap" AcceptsReturn="True" x:Name="myNavUrls"/>

                            <Button Grid.Row="0" Grid.Column="1" Content="Start capturing" x:Name="myCapture" Click="myCapture_Click"/>
                            <Button Grid.Row="1" Grid.Column="1" Content="Replay" x:Name="myReplay" Click="myReplay_Click"/>
                            <Button Grid.Row="2" Grid.Column="1" Content="Edit" x:Name="myEditCapture" Click="myEditCapture_Click"/>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>

            <WindowsFormsHost HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
                <winforms:WebBrowser x:Name="myBrowser"/>
            </WindowsFormsHost>
        </DockPanel>
    </DockPanel>
</UserControl>
