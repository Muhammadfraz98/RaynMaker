<MenuItem x:Class="RaynMaker.Data.CurrenciesMenuItem"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
          xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
          xmlns:prism="http://www.codeplex.com/prism"
          xmlns:pn="http://github.com/ronin4net/plainion"
          xmlns:l="clr-namespace:RaynMaker.Data"
          mc:Ignorable="d" 
          Header="Currencies ..."
          Command="{Binding InvokeCommand}"
          IsEnabled="{Binding IsEnabled}">
    <i:Interaction.Triggers>
        <prism:InteractionRequestTrigger SourceObject="{Binding InvokeRequest, Mode=OneWay}">
            <pn:PopupViewAction WindowWidth="700" WindowHeight="600" prism:RegionManager.RegionName="{x:Static l:RegionNames.CurrenciesView}"/>
        </prism:InteractionRequestTrigger>
    </i:Interaction.Triggers>
</MenuItem>
